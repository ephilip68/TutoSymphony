{% extends 'admin/admin.html.twig' %}

{% block title "Créer une catégorie"  %}

{% block stylesheets %}
  {{ parent() }}
    <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background: 
        linear-gradient(135deg, rgba(122, 167, 123, 0.65), rgba(74, 124, 89, 0.65)) fixed,
        url('{{ asset("images/background.jpg") }}') no-repeat center center fixed;
      background-size: cover;
      background-blend-mode: overlay;
      color: #2f4f4f;
    }
  </style>
{% endblock %}

{% block body %}
    <div class="container flash-messages">
      {% include 'partials/flash.html.twig' %}
  </div>
  <div class="container" style="padding-top: 2rem;">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
      
      <!-- HEADER -->
      <div class="card-header text-white rounded-top-4 py-3">
        <h2 class="mb-0">
          <i class="fas fa-folder-open me-2"></i>
          Ajouter une catégorie
        </h2>
      </div>

      <!-- FORMULAIRE -->
      <div class="card-body p-4">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="row">
          <!-- COLONNE GAUCHE -->
          <div class="col-md-5 border-end pe-4">
            <h4>Informations générales</h4>

            <div class="mb-3">
              {{ form_label(form.name, '<i class="fas fa-heading me-2" style="color:#7ba77b"></i>Nom', {
                  'label_attr': { 'class': 'form-label fw-bold' },
                  'label_html': true
              }) }}
              {{ form_widget(form.name, { 'attr': { 'class': 'form-control shadow-sm' } }) }}
            </div>

          </div>

          <!-- COLONNE DROITE -->
          <div class="col-md-7 ps-4">
            <h4>Image</h4>

            <div class="mb-3">
              {{ form_label(form.thumbnailFile, '<i class="fas fa-image me-2" style="color:#7ba77b"></i>Image de la catégorie', {
                  'label_attr': { 'class': 'form-label fw-bold' },
                  'label_html': true
              }) }}
              {{ form_widget(form.thumbnailFile, { 'attr': { 'class': 'form-control shadow-sm' } }) }}
            </div>
          </div>
        </div>

        <!-- BOUTON -->
        <div class="text-end mt-4">
          <button type="submit" class="btn btn-success btn-lg rounded-3 shadow-sm">
            <i class="fas fa-save me-2"></i>Ajouter
          </button>
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
