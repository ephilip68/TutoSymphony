{% extends 'base.html.twig' %}

{% block title %}Ajouter un témoignage{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background: 
        linear-gradient(135deg, rgba(122, 167, 123, 0.65), rgba(74, 124, 89, 0.65)) fixed,
        url('{{ asset("images/background.jpg") }}') no-repeat center center fixed;
      background-size: cover;
      background-blend-mode: overlay;
      color: #2f4f4f;
    }

    .btn-submit {
      background: linear-gradient(90deg, #4a7c59, #7ba77b);
      border: none;
      font-weight: bold;
      color: #fff;
      padding: 12px 30px;
      border-radius: 50px;
      display: block;
      margin: 1.5rem auto 0;
      transition: all 0.3s ease;
      font-size: 1.1rem;
    }

    .btn-submit:hover {
      background: linear-gradient(90deg, #3d684a, #4a7c59);
      color: #fff;
    }
  </style>
{% endblock %}

{% block body %}
    <div class="container flash-messages">
        {% include 'partials/flash.html.twig' %}
    </div>
  <div class="container" style="padding-top: 2rem;">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 600px;
      margin: 0 auto;">
      
      <!-- HEADER -->
      <div class="card-header text-white text-center rounded-top-4 py-3 px-4">
        <h2><i class="fas fa-comment-dots"></i> Ajouter un témoignage</h2>
      </div>

      <div class="card-body p-4">
        {{ form_start(form) }}

        <!-- CHAMPS EMPILÉS -->
        <div class="mb-3">
          {{ form_label(form.text, '<i class="fas fa-comment-alt me-2" style="color:#7ba77b"></i>Votre témoignage', {
            'label_attr': {'class':'form-label fw-bold'},
            'label_html': true
          }) }}
          {{ form_widget(form.text, {'attr': {'class':'form-control shadow-sm', 'rows':5, 'placeholder':'Écrivez votre avis ici...'}}) }}
          {{ form_errors(form.text) }}
        </div>

        <div class="mb-3">
          {{ form_label(form.rating, '<i class="fas fa-star me-2" style="color:#7ba77b"></i>Note (1 à 5)', {
            'label_attr': {'class':'form-label fw-bold'},
            'label_html': true
          }) }}
          {{ form_widget(form.rating, {'attr': {'class':'form-control shadow-sm', 'min':1, 'max':5}}) }}
          {{ form_errors(form.rating) }}
        </div>

        <button type="submit" class="btn btn-success btn-lg rounded-4 d-block mx-auto">
          <i class="fas fa-paper-plane me-2"></i> Envoyer mon avis
        </button>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
