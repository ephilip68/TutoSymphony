{% extends 'base.html.twig' %}

{% block title %}{{ recipe.title }} – MonSite Recettes{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background: 
        linear-gradient(135deg, rgba(122, 167, 123, 0.75), rgba(74, 124, 89, 0.75)) fixed,
        url('{{ vich_uploader_asset(recipe, 'thumbnailFile') ?? asset("images/default-recipe.webp") }}') no-repeat center center fixed;
      background-size: cover;
      background-blend-mode: overlay;
      color: #2f4f4f;
    }
  </style>
{% endblock %}

{% block body %}
   <div class="container flash-messages">
        {% include 'partials/flash.html.twig' %}
    </div>

  <section class="page-wrapper">
    <div class="recipe-container">
      
      <!-- HEADER -->
      <div class="recipe-header">
        <div class="recipe-title-box">
          <h1 class="recipe-titles" style="color: #fff;"><i class="fas fa-utensils me-2"></i>{{ recipe.title }}</h1>
          
          <!-- Quick Infos -->
          <div class="quick-infos">
            <div class="quick-info-item">
              <i class="fas fa-clock"></i>
              {% if recipe.duration is not empty %}
                {% if recipe.duration < 60 %}
                  {{ recipe.duration }} min
                {% else %}
                  {{ (recipe.duration // 60) }} h 
                  {% if recipe.duration % 60 != 0 %}
                    {{ (recipe.duration % 60) }} min
                  {% endif %}
                {% endif %}
              {% else %}
                Non précisé
              {% endif %}
            </div>
            <div class="quick-info-item">
              <i class="fas fa-tag"></i> {{ recipe.category.name ?? 'Non classée' }}
            </div>
            <div class="quick-info-item">
              <i class="fas fa-user"></i> Ajouté par {{ recipe.author.username|title|default('Auteur inconnu') }}
            </div>
            <div class="quick-info-item favorite-count-badge">
             <i class="fas fa-heart text-danger"></i>
              <span id="favorite-count">{{ recipe.favoritedBy|length }}</span>
            </div>
          </div>
        </div>
        <div class="recipe-image position-relative">
          {% set img = vich_uploader_asset(recipe, 'thumbnailFile') %}
          <img src="{{ img ? img|imagine_filter('thumb_700x400') : asset('images/default-recipe.webp') }}" alt="{{ recipe.title }}">
        </div>
      </div>

      <!-- SLOGAN -->
      <div class="recipe-slogan">
        <i class="fas fa-quote-left me-2"></i>
        {{ recipe.slogan ?? 'Une recette pleine de saveurs à découvrir !' }}
        <i class="fas fa-quote-right ms-2"></i>
      </div>

      <!-- CONTENT -->
      <div class="recipe-content">
        <div class="ingredients">
          <h2 class="section-heading"><i class="fas fa-carrot"></i> Ingrédients</h2>
          <ul class="ingredients-list">
            {% for ri in recipe.recipeIngredients %}
              <li>
                {% if ri.ingredient.imageUrl %}
                  <img src="{{ ri.ingredient.imageUrl }}" alt="{{ ri.ingredient.name }}" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%; margin-right: 10px;">
                {% endif %}
                {{ ri.quantity }} {{ ri.ingredient.unit }} de {{ ri.ingredient.name }}
              </li>
            {% else %}
              <li>Aucun ingrédient renseigné.</li>
            {% endfor %}
          </ul>
        </div>

        <div class="steps">
          <h2 class="section-heading"><i class="fas fa-list-ol"></i> Préparation</h2>
          <ol class="steps-list">
            {% for step in recipe.content|split("\n") %}
              {% if step is not empty %}
                <li>{{ step|trim }}</li>
              {% endif %}
            {% else %}
              <li>Aucune étape renseignée.</li>
            {% endfor %}
          </ol>
        </div>

        <div class="vertical-text">Recette</div>
      </div>

      <!-- FOOTER -->
      <div class="recipe-footer">
        <i class="fas fa-leaf me-2"></i> Facile, délicieux et nutritif !
      </div>

      <!-- ACTION BUTTONS -->
      <div class="action-buttons">
        <a href="{{ path('user.recipe.list') }}" class="btn-action"><i class="fas fa-arrow-left"></i> Retour à la liste</a>

        {% if is_granted('RECIPE_EDIT', recipe) %}
          <a href="{{ path('user.recipe.recipe_edit', {id: recipe.id}) }}" class="btn-edit"><i class="fas fa-edit"></i> Modifier</a>
        {% endif %}

        {% if is_granted('RECIPE_DELETE', recipe) %}
          <form method="post" action="{{ path('user.recipe.recipe_delete', {id: recipe.id}) }}" onsubmit="return confirm('Supprimer cette recette ?');" style="margin: 0;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
            <button class="btn-delete"><i class="fas fa-trash-alt"></i> Supprimer</button>
          </form>
        {% endif %}
         
          
            <a class="btn btn-sm btn-favorite {{ recipe.id in favoriteIds ? 'active' : '' }}" 
                  data-url="{{ path('user.recipe.toggle_favorite', {id: recipe.id}) }}"
                  data-csrf="{{ csrf_token('favorite' ~ recipe.id) }}">
                  {% if favoriteIds is defined %}
                    <i class="{{ recipe.id in favoriteIds ? 'fas fa-heart text-danger' : 'far fa-heart text-danger' }}"></i>
                  {% else %}
                    <i class="far fa-heart text-danger"></i>
                  {% endif %} 
                  Favoris
              </a>
      </div>
    </div>
  </div>
{% endblock %}
