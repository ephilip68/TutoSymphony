{% extends 'base.html.twig' %}

{% block title %}Toutes les Recettes - MonSite Recettes{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
     body {
      font-family: 'Open Sans', sans-serif;
      background:
        url('https://www.transparenttextures.com/patterns/paper-fibers.png') repeat;
      background-blend-mode: overlay;
      color: #2f4f4f; /* Vert sapin fonc√© */
    }

    .page-content {
      padding: 2rem 0; 
      padding-top: 100px;
    }

    .section-title {
      font-family: 'Playfair Display', serif;
      color: #2e7d32;
      font-size: 2.5rem;
      text-align: center;
      margin-top: 2rem;
      margin-bottom: 3rem;
    }

    .recipes-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      padding: 0 2rem 4rem;
      max-width: 1300px;
      margin: auto;
    }

    .recipe-card {
      background: #f1f8f1;
      border-radius: 1.5rem;
      box-shadow: 0 10px 28px rgba(46, 77, 46, 0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      max-width: 350px;
      width: 100%;
    }

    .recipe-card:hover {
      transform: translateY(-12px);
      box-shadow: 0 18px 48px rgba(56, 142, 60, 0.3);
    }

    .recipe-card img {
      width: 100%;
      height: 230px;
      object-fit: cover;
      border-top-left-radius: 1.5rem;
      border-top-right-radius: 1.5rem;
      box-shadow: inset 0 0 50px rgba(56, 142, 60, 0.2);
      transition: transform 0.4s ease;
    }

    .recipe-card:hover img {
      transform: scale(1.05);
    }

    .recipe-card-body {
      padding: 1.5rem 2rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      color: #2e4d2e;
    }

    .recipe-title {
      font-family: 'Playfair Display', serif;
      font-weight: 700;
      font-size: 1.6rem;
      margin-bottom: 0.7rem;
      color: #2e7d32;
      letter-spacing: 1.2px;
    }

    .recipe-meta {
      font-size: 0.95rem;
      color: #4a7c4a;
      margin-bottom: 1rem;
    }

    .recipe-content {
      flex-grow: 1;
      font-size: 1rem;
      margin-bottom: 1.3rem;
      color: #4a7c4a;
      line-height: 1.4;
    }

    .btn-see {
      align-self: center;
      background-color: #388e3c;
      color: white;
      padding: 12px 30px;
      border-radius: 50px;
      font-weight: 700;
      font-size: 1.05rem;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .btn-see:hover {
      background-color: #2e7d32;
    }
  </style>
{% endblock %}

{% block body %}
<section class="page-content">
  <h1 class="section-title">üçÉ Toutes les Recettes</h1>

  <div class="recipes-grid">
    {% for recipe in recipes %}
      {% set imagePath = vich_uploader_asset(recipe, 'thumbnailFile') %}
      <div class="recipe-card">
        {% if imagePath %}
          <img src="{{ imagePath | imagine_filter('thumb_700x_auto') }}" alt="{{ recipe.title }}">
        {% else %}
          <img src="{{ asset('images/default-recipe.webp') | imagine_filter('thumb_700x_auto') }}" alt="Recette par d√©faut">
        {% endif %}

        <div class="recipe-card-body">
          <h2 class="recipe-title">{{ recipe.title }}</h2>

          <div class="recipe-meta">
            üóÇÔ∏è {{ recipe.category.name|title|default('Sans cat√©gorie') }}<br>
            ‚è±Ô∏è 
            {% if recipe.duration is not empty %}
              {% if recipe.duration < 60 %}
                {{ recipe.duration }} min
              {% else %}
                {{ (recipe.duration // 60) }} h
                {% if recipe.duration % 60 != 0 %}
                  {{ (recipe.duration % 60) }} min
                {% endif %}
              {% endif %}
            {% else %}
              Dur√©e non pr√©cis√©e
            {% endif %}
            <br>
            üìÖ {{ recipe.createdAt|date('d/m/Y') }}<br>
            üë®‚Äçüç≥ Ajout√©e par {{ recipe.author.username|title }}
          </div>

          <a href="{{ path('recipe_show', {'slug': recipe.slug}) }}" class="btn-see">
            Voir la recette
          </a>
        </div>
      </div>
    {% else %}
      <p class="text-center">Aucune recette trouv√©e pour le moment.</p>
    {% endfor %}
  </div>
</section>
{% endblock %}
